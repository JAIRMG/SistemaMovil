<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView"
                android:layout_gravity="bottom"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="268dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/floatingActionButton"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:id="@+id/linear1">


                <TextView
                    android:id="@+id/nombreEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/floatingActionButton"
                    android:layout_gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:text="Nombre:" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/floatingActionButton"
                    android:layout_gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Jair Moreno Gaspar" />


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear1"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:id="@+id/linear2">


                    <TextView
                        android:id="@+id/escuelaEtiqueta"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="left"
                        android:layout_below="@+id/nombreEtiqueta"
                        android:paddingLeft="50dp"
                        android:paddingRight="10dp"
                        android:text="Escuela:" />

                    <TextView
                        android:id="@+id/escuela"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_below="@+id/nombre"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="UPIITA" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/linear2"
                    android:paddingTop="10dp"
                    android:id="@+id/linear3">

                    <TextView
                        android:id="@+id/edadEtiqueta"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_below="@+id/escuelaEtiqueta"
                        android:layout_gravity="left"
                        android:paddingLeft="50dp"
                        android:paddingRight="10dp"
                        android:text="Edad:" />




                    <TextView
                        android:id="@+id/edad"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:paddingLeft="30dp"
                        android:paddingRight="10dp"
                        android:layout_below="@+id/escuela"
                        android:text="22" />


                </LinearLayout>



            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@+id/linear3"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:id="@+id/linear4">

                <TextView
                    android:id="@+id/usuarioEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Usuario:"
                    android:layout_gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="JairMG" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear4"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:id="@+id/linear5">

                <TextView
                    android:id="@+id/usuarioEtiqueta2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Usuario:"
                    android:layout_gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp" />

                <EditText
                    android:id="@+id/editUsuario"
                    android:layout_width="149dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textSize="14sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    ></android.support.design.widget.TextInputLayout>


            </LinearLayout>



        </RelativeLayout>

    </ScrollView>


    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:text="@string/inicio"
         android:textSize="24sp" /> -->


</FrameLayout>
